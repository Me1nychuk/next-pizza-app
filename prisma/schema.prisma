generator client  {
    provider = "prisma-client-js"
}

datasource db  {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
    id           String   @id @default(uuid())

    fullname     String   
    email        String   @unique
    password     String
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


    }

model Product {
    id           String   @id @default(uuid())
    name String
    imageUrl String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}